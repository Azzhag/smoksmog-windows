<Page x:Class="SmokSmog.Views.StationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:SmokSmog.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:SmokSmog.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DataContext="{Binding Path=StationViewModel,
                              Source={StaticResource ViewModelLocator}}"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      DataContext="{Binding Path=StationViewModel,
                            Source={StaticResource ViewModelLocator}}"
      RequestedTheme="Light"
      mc:Ignorable="d">

    <Grid Background="White">

        <StackPanel VerticalAlignment="Center">

            <TextBlock HorizontalAlignment="Center"
                       FontSize="25"
                       Text="{Binding Station.Name}" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock FontSize="18" Text="{Binding Station.City}" />
                <TextBlock FontSize="18" Text=",&#160;" />
                <TextBlock FontSize="18" Text="{Binding Station.Province}" />
            </StackPanel>

            <Grid x:Name="AQIRoot"
                  Margin="0,30,0,0"
                  HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Margin="0,10"
                           FontSize="15"
                           Text="{Binding LocalizedResources.StringAirQualityIndex,
                                          Source={StaticResource LocalizedStrings}}" />

                <controls:AqiRing AQI="{Binding AirQualityIndex}" />
            </Grid>

            <TextBlock FontSize="50"
                       Text=";("
                       TextAlignment="Center" />

            <TextBlock FontSize="32"
                       Text="Not Implemented Yet!"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
            <TextBlock FontSize="32"
                       Text="Jeszcze nie zaimplementowane!"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Page>