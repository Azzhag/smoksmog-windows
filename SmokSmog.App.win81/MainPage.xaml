<Page x:Class="SmokSmog.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:SmokSmog"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      DataContext="{Binding Path=StationList,
                            Source={StaticResource Locator}}"
      mc:Ignorable="d">

    <!--  d:DataContext="{Binding Path=StationList, Source={StaticResource Locator}}"  -->

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <ListBox Margin="0,150" ItemsSource="{Binding StationList}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--  TitlePanel contains the name of the application and page title  -->
        <StackPanel x:Name="TitlePanel"
                    Grid.Row="0"
                    Margin="12,100,0,28">
            <TextBlock Margin="12,0" Text="{Binding Path=LocalizedResources.ApplicationTitle, Source={StaticResource LocalizedStrings}}" />
        </StackPanel>
    </Grid>
</Page>